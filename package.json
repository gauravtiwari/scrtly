{
  "name": "scrtly",
  "private": true,
  "scripts": {
    "start": "meteor --settings settings.json"
  },
  "browser": {
    "vegas": "node_modules/vegas/dist/vegas.js"
  },
  "dependencies": {
    "algoliasearch": "^3.18.0",
    "babel-core": "^6.10.4",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "clipboard": "^1.5.12",
    "dialog-polyfill": "^0.4.3",
    "invariant": "^2.2.1",
    "iscroll": "^5.2.0",
    "jquery": "^3.0.0",
    "meteor-node-stubs": "~0.2.0",
    "spinkit": "^1.2.5",
    "tracker-component": "^1.3.21",
    "vegas": "^2.2.1",
    "wolfy87-eventemitter": "^5.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-eslint": "^6.1.0",
    "eslint": "^2.13.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-import-resolver-meteor": "^0.2.3",
    "eslint-plugin-import": "^1.9.2",
    "eslint-plugin-jsx-a11y": "^1.5.3",
    "eslint-plugin-meteor": "^3.6.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "settings": {
      "import/resolver": "meteor"
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb/base",
      "plugin:meteor/recommended"
    ],
    "rules": {
      "meteor/eventmap-params": [
        2,
        {
          "eventParamName": "event",
          "templateInstanceParamName": "instance"
        }
      ],
      "meteor/template-names": [
        0
      ]
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "browsers": [
          "last 2 versions"
        ]
      }
    }
  }
}
